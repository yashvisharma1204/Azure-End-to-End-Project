										},
										"dataset": {
											"referenceName": "pipelineJson",
											"type": "DatasetReference",
											"parameters": {
												"Container": "bronze",
												"Folder": {
													"value": "@{item().table}_cdc",
													"type": "Expression"
												},
												"File": "cdc.json"
											}
										},
										"firstRowOnly": false
									}
								},
								{
									"name": "Current_copy1",
